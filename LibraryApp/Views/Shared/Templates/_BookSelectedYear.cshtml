<div class="row mb-md-2">
    @for (int i=0; i<@Model.BooksYear.Count; i++)
    {
        <div class="col-md-6 col-lg-2">
            <div class="card shadow-sm border-light mb-4">
                <a class="text-decoration-none" asp-route-id="@Model.BooksYear[i].Id" asp-controller="Book" asp-action="Details">
                    <div class="position-relative">
                        <img src="~/images/@Model.BooksYear[i].Image" style="object-fit: cover;" height="250" class="card-img-top" alt="image">
                    </div>

                    <div class="card-body text-decoration-none text-dark">
                        <h6 class="fw-bold">@Model.BooksYear[i].Title</h6>
                        @Model.BooksYear[i].Author.Name @Model.BooksYear[i].Author.LastName
                    </div>
                </a>
            </div>
        </div>
    }
</div>
