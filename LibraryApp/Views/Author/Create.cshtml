@{
     ViewData["Title"] = "Dodaj autora";
}

<div class="col-sm-6 mx-auto">
    <form asp-controller="Author" asp-action="Create" method="post">
        <h1>Dodaj autora</h1>
        
        <div class="mb-3">
            <label for="Name">Imię</label><br>
            <input id="Name" name="Name" type="text" class="form-control" minlength="3" maxlength="100" required>
        </div>

        <div class="mb-3">
            <label for="LastName">Autor</label><br>
            <input id="LastName" name="LastName" type="text" class="form-control" minlength="3" maxlength="100" required>
        </div>
        
        <button class="btn btn-primary" type="submit">Zapisz</button>
    </form>
</div>

