@{
     ViewData["Title"] = "Autorzy";
}

<div class="container">
    <div class="row p-2">
        <div class="col-12 d-flex justify-content-end">
            <a class="btn btn-primary" asp-controller="Author" asp-action="Create">Dodaj autora</a>
        </div>
    </div>
    <div class="row p-2">
        <div class="col-5">
            <form class="d-flex">
                <label class="form-label me-3 align-self-center">Wyszukiwanie</label> 
                <input class="form-control me-2" type="search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
        <div class="col-7 d-flex justify-content-end">
            <label class="form-label me-3 align-self-center">Sortowanie</label>
            <select class="form-control w-25"></select>
        </div>
    </div>
    
    <ul class="list-group mt-4">
        @foreach (var author in Model)
        {
            <li class="list-group-item d-flex justify-content-between">
                <div class="align-self-center">
                    <a class="text-decoration-none text-dark" asp-route-id="@author.Id" asp-controller="Author" asp-action="Details"><strong class="mb-1">@author.Name @author.LastName</strong></a><br>
                </div>
                <div class="align-self-center">       
                    <a class="btn btn-outline-primary" asp-route-id="@author.Id" asp-controller="Author" asp-action="Edit">Edytuj</a>
                    <a class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Usuń</a>
                    <form asp-route-id="@author.Id" asp-controller="Author" asp-action="Delete" method="post">
                        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Usuwanie</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                Czy na pewno usunąć książkę?
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                                <button type="submit" class="btn btn-danger">Usuń</button>
                              </div>
                            </div>
                          </div>
                        </div>
                    </form>
                </div>
            </li>    
        }
    </ul>
</div>