@{
     ViewData["Title"] = "Edytuj dane autora";
}

<div class="p-4">
    <form asp-controller="Author" asp-action="Edit" method="post">
        <h3>Edytuj autora</h3>
        
        <div class="form-group">
            <label for="Name">Imię</label><br>
            <input name="Name" type="text" class="form-control" minlength="3" maxlength="100" required value="@Model.Name">
        </div>

        <div class="form-group">
            <label for="LastName">Autor</label><br>
            <input name="LastName" type="text" class="form-control" minlength="3" maxlength="100" required value="@Model.LastName">
        </div>
        
        <button id="save" class="btn btn-primary" type="submit">Zapisz</button>
    </form>
</div>