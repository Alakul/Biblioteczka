@using Microsoft.AspNetCore.Identity
@using LibraryApp.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Wypożyczanie";
    string path = "/Loan";
}

<partial name="Templates/_Alert" model="@TempData["Alert"]?.ToString()"/>
<partial name="Templates/_SearchBar" model="@path"/>

@if (User.IsInRole("Admin")){
    <partial name="Templates/_LoanListAdmin"/>
}
else if (SignInManager.IsSignedIn(User)){
    <partial name="Templates/_LoanList"/>
}

<partial name="Templates/_Pagination" model="@Model"/>