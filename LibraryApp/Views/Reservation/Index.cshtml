@using Microsoft.AspNetCore.Identity
@using LibraryApp.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Rezerwacje";
}

Rezerwacje

<partial name="Templates/_Alert" model="@TempData["Alert"]?.ToString()"/>

<ul class="list-group mt-4">
    @if (User.IsInRole("Admin")){
        <partial name="Templates/_ReservationListAdmin" model="@Model"/>
    }
    else if (SignInManager.IsSignedIn(User)){
        <partial name="Templates/_ReservationList" model="@Model"/>
    }
</ul>
            
