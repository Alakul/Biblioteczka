<div class="bg-white rounded shadow ps-3 pe-3 pt-1 pb-1 mt-3">
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th scope="col">Tytuł</th>
                <th scope="col">Okładka</th>
                <th scope="col">Autor</th>
                <th scope="col">Rok wydania</th>
                <th scope="col">Data dodania</th>  
            </tr>
        </thead>

        <tbody>
            @foreach (var List in @Model.BookList)
            {
                <tr>
                    <td class="col-3"><a class="text-decoration-none text-dark" asp-route-id="@List.Book.Id" asp-controller="Book" asp-action="Details">@List.Book.Title</a></td>
                    <td><img src="~/images/@List.Book.Image" style="object-fit: cover;" height="100"/></td>
                    <td class="col-2"><a class="text-decoration-none text-dark" asp-route-id="@List.Book.AuthorId" asp-controller="Author" asp-action="Details">@List.Book.Author.Name @List.Book.Author.LastName</a></td>
                    <td>@List.Book.Year</td>
                    <td>@List.Book.Date</td>
                </tr>
            }
        </tbody>
    </table>
</div>