@using Microsoft.AspNetCore.Identity
@using Biblioteczka.Areas.Identity.Data
@inject UserManager<AppUser> UserManager

<div class="bg-white rounded shadow ps-3 pe-3 pt-1 pb-1 mt-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Tytuł</th>
                <th scope="col">Autor</th>
                <th scope="col">Egzemplarz</th>
                <th scope="col">Data</th>
                <th scope="col" class="text-end"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Reservation in @Model)
            {
                @if (Reservation.UserBorrowingId == @UserManager.GetUserId(User))
                {
                    <tr>  
                        <td><a class="text-decoration-none text-dark" asp-route-id="@Reservation.BookId" asp-controller="Book" asp-action="Details">@Reservation.BookId</a></td>
                        <td><a class="text-decoration-none text-dark" asp-route-id="@Reservation.BookId" asp-controller="Author" asp-action="Details"></a></td>
                        <td><a class="text-decoration-none text-dark" asp-route-id="@Reservation.BookId" asp-controller="Book" asp-action="Details">@Reservation.CopyId</a></td>
                        <td>@Reservation.Date</td>
                        <td class="text-end">
                            @if (User.IsInRole("Admin")){
                                <a class="btn btn-success mb-1" asp-route-id="@Reservation.Id" asp-controller="Loan" asp-action="Create">Wypożycz</a>
                            }
                            <a class="btn btn-danger mb-1" data-bs-toggle="modal" data-bs-target="#deleteModal_@Reservation.Id"><i class="bi bi-trash3-fill"></i></a>
                            <form asp-route-id="@Reservation.Id" asp-controller="Reservation" asp-action="Delete" method="post">
                                <partial name="Templates/_ModalDelete" model="@Reservation.Id"/>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>