@{
     ViewData["Title"] = "Edytuj dane użytkownika";
}

<div class="mb-3">
    <partial name="Templates/_BackButton"/>
</div>

<div class="col-sm-8 col-md-6 mx-auto">
    <partial name="Templates/_Alert" model="@TempData["Alert"]?.ToString()"/>
    <div class="bg-white rounded shadow p-4">
        <form asp-controller="User" asp-action="Edit" method="post">
            <partial name="Templates/_FormHeader" model="@ViewData["Title"]"/>
        
            <div class="mb-3">
                <label for="UserName">Login</label>
                <input id="UserName" name="UserName" type="text" class="form-control" minlength="3" maxlength="100" value="@Model.UserName" required>
            </div>

            <div class="mb-3">
                <label for="Email">Email</label>
                <input id="Email" name="Email" type="text" class="form-control" minlength="3" maxlength="100" value="@Model.Email" required>
            </div>

            <partial name="Templates/_FormButton"/>
        </form>
    </div>
</div>

