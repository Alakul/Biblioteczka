@page "/Rejestracja"
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="col-md-6 col-sm-10 col-12 mx-auto bg-white rounded shadow p-4">
	<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
		<h1>@ViewData["Title"]</h1>
		<h4>Utwórz nowe konto.</h4>
		<hr />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="Input.Email">Email</label>
			<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" 
				data-val-email="Pole Email nie jest prawidłowym adresem email." 
				data-val-required="Pole Email jest wymagane."/>
			<span asp-validation-for="Input.Email" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Input.Password">Hasło</label>
			<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" 
				data-val-required="Pole Hasło jest wymagane."
				data-val-length="Hasło musi mieć co najmniej 6 i maksymalnie 100 znaków." />
			<span asp-validation-for="Input.Password" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
			<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"
				data-val-equalto="Hasło i hasło potwierdzające nie pasują do siebie."/>
			<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
		</div>
		<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-4">Zarejestruj się</button>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
